{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"@sveltejs/kit#build": {
			"dependsOn": ["^build"],
			"inputs": ["rollup.config.js", "src/**", "scripts/**", "types/**"],
			"outputs": ["dist/**", "docs/**", "assets/**"],
			"outputMode": "new-only"
		},
		"kit.svelte.dev#build": {
			"dependsOn": ["^build", "$VERCEL", "$ENABLE_VC_BUILD"],
			"inputs": ["src/**", "../../packages/kit/docs/**", "../../documentation/**"],
			"outputs": [".vercel_build_output/**", ".vercel/output/**"],
			"outputMode": "new-only"
		},
		"build": {
			"dependsOn": ["^build", "$VERCEL", "$ENABLE_VC_BUILD"],
			"inputs": ["src/**", "scripts/**", "shared/**", "templates/**"],
			"outputs": [
				"files/**",
				"dist/**",
				".svelte-kit/**",
				".vercel_build_output/**",
				".vercel/output/**"
			],
			"outputMode": "new-only"
		},
		"check": {
			"dependsOn": ["prepare"],
			"inputs": [
				"src/**",
				"types/**",
				".svelte-kit/types/**",
				".custom-out-dir/types/**",
				".svelte-kit/tsconfig.json"
			],
			"outputs": [],
			"outputMode": "new-only"
		},
		"format": {
			"cache": false,
			"outputs": [],
			"outputMode": "new-only"
		},
		"prepare": {
			"inputs": ["src/**", "source/**"],
			"outputs": [
				".svelte-kit/types/**",
				".svelte-kit/tsconfig.json",
				".custom-out-dir/types/**",
				".custom-out-dir/tsconfig.json"
			],
			"outputMode": "new-only"
		},
		"test": {
			"dependsOn": ["^build", "$CI", "$TURBO_CACHE_KEY"],
			"outputs": ["coverage/", "test-results/**"],
			"outputMode": "new-only"
		},
		"lint": {
			"outputs": [],
			"outputMode": "new-only"
		},
		"precommit": {
			"dependsOn": ["format", "lint"],
			"outputs": [],
			"outputMode": "new-only"
		},
		"dev": {
			"cache": false,
			"outputMode": "new-only"
		}
	},
	"globalDependencies": [".eslintrc.json", ".prettierrc", "tsconfig.json"]
}
